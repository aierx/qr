<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <jaxrs:server id="rs" address="/">
        <jaxrs:serviceBeans>
            <ref bean="userService"/>
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <bean class="com.alibaba.fastjson.support.jaxrs.FastJsonProvider"/>
            <bean class="com.aierx.boot.exception.ValidationExceptionMapper"/>
            <bean class="org.apache.cxf.rs.security.cors.CrossOriginResourceSharingFilter"/>
        </jaxrs:providers>
        <jaxrs:features>
            <bean class="org.apache.cxf.validation.BeanValidationFeature"/>
            <bean class="org.apache.cxf.ext.logging.LoggingFeature"/>
            <bean id="swagger2" class="org.apache.cxf.jaxrs.swagger.Swagger2Feature">
                <property name="basePath" value="/cxf/swaggerSample"/>
                <property name="resourcePackage" value="com.aierx.boot"/>
            </bean>
        </jaxrs:features>
        <jaxrs:properties>
            <entry key="org.apache.cxf.logging.FaultListener">
                <bean class="com.aierx.boot.exception.ValideLister"/>
            </entry>
            <entry key="org.apache.cxf.validation.BeanValidationProvider">
                <ref bean="validatorFactory"/>
            </entry>
        </jaxrs:properties>
    </jaxrs:server>
</beans>